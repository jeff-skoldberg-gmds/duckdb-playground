{
    "name": "duckdb-playground",
    "context": "..",
    "dockerFile": "Dockerfile",
    "mounts": [
        "source=${localEnv:HOME}/.dbt/profiles.yml,target=/root/.dbt/profiles.yml,type=bind"
      ],    
    "settings": { 
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
    ],
    "postCreateCommand": "python -m venv .venv && . .venv/bin/activate && pdm sync",
    "remoteUser": "root"
}
